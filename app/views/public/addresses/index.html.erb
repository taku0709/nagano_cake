<div class= "container">
 <div class= "row">
  <h2>配送先登録/一覧</h2>
   <div class="col-md-10 col-md-offset-1">
    <%= form_with model: @address, url: public_addresses_path, local:true do |f| %>
     <div class= "form-group">
      <%= f.label :郵便番号 %><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
     </div>
     <div class= "form-group">
      <%= f.label :住所 %><%= f.text_field :address, autofocus: true, autocomplete: "address" %>
     </div>
     <div class= "form-group">
      <%= f.label :宛名 %><%= f.text_field :name, autofocus: true, autocomplete: "name" %>
     </div>
     <div class= "text-right">
      <%= f.submit "新規登録" , class: "btn btn-primary" %>
     </div>
    <% end %>
   </div>
   <div class= "col-12">
    <tabel class= "tabel">
     <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
     </tr>
     <tr>
      <td><%= @address.postal_code %></td>
      <td><%= @address.address %></td>
      <td><%= @address.name %></td>
      <td>
       <%= link_to "編集する", edit_public_address_path, class: "btn btn-primary" %>
       <%= link_to "削除する", public_address_path, method: :delete, class: "btn btn-danger" %>
      </td>
     </tr>
    </tabel>
   </div>
 </div>
</div>