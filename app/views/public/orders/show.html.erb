<div class= "container">
 <div class= "row">
  <h2>注文履歴詳細</h2>
   <div class= "col-7">
    <h3>注文情報</h3>
    <table class= "table">
     <tr>
      <td>注文日</td>
      <td><%= order.created_at %></td>
     </tr>
     <tr>
      <td>配送先</td>
      <td>
       〒<%= order.postal_code %></br>
       <%= order.address %></br>
       <%= order.name %>
      </td>
     </tr>
     <tr>
      <td>支払方法</td>
      <td><%= order.payment_method %></td>
     </tr>
    </table>
   </div>
   <div class= "col-5">
    <h3>請求情報</h3>
    <table class= "table">
     <tr>
      <td>商品合計</td>
      <td>¥<%= ordre.billing_amount %>円</td>
     </tr>
     <tr>
      <td>配送料</td>
      <td>¥<%= 800 %>円</td>
     </tr>
     <tr>
      <td>ご請求額</td>
      <td>¥<%= order.billing_amount + 800 %>円</td>
     </tr>
    </table>
   </div></br>
   <div class= "col-7">
    <h3>注文内容</h3>
     <table class= "table">
      <thead>
       <tr>
        <th>商品</th>
        <th>単価（税込）</th>
        <th>個数</th>
        <th>小計</th>
       </tr>
      </thead>
      <tbody>
       <tr>
        <td><%= order.item.name %></td>
        <td><%= order.order_detail.price %></td>
        <td><%= order.amount %></td>
        <td><%= order.order_detail.price * order.order_detail.amount %></td>
       </tr>
      </tbody>
     </table>
   </div>
 </div>
</div>