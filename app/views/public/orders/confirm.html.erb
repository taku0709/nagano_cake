<div class= "container">
 <div class= "row">
  <h2 class= "texe-center">注文情報確認</h2>
   <div class= "col-8">
     <table class= "table">
      <thead>
       <tr>
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
      </tr>
      </thead>
      <tbody>
       <% @cart_items.each do |cart_item| %>
        <tr>
         <td><%= attachment_image_tag cart_item.item, :image, :fill, 30, 30, format: 'jpeg',fallback: "no_image.jpeg" %><%= cart_item.item.name %></td>
         <td><%= cart_item.item.with_tax_price %></td>
         <td><%= cart_item.amount %></td>
         <td><%= cart_item.subtotal %></td>
        </tr>
       <% end %>
      </tbody>
     </table>
   </div>
   <div class= "col-4">
    <table class= "table">
     <thead>
      <tr><th>送料</th></tr>
      <tr><th>商品合計</th></tr>
      <tr><th>請求金額</th></tr>
     </thead>
     <tbody>
      <tr><td>800</td></tr>
      <tr><td><%= @total %></td></tr>
      <tr><td><%= @total + 800 %></td></tr>
     </tbody>
    </table>
   </div>
   <div class= "text-right">
    <p>支払方法<%= order.payment_method %></p></br>
    <p>合計金額<%= @total + 500 %></p>
   </div>
   <div class= "text-center">
    <%= link_to "注文を確定する", public_orders_thanks_path, class: "btn btn-primary" %>
   </div>
 </div>
</div>