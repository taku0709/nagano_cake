<div class= "container">
 <div class= "row">
  <h2>注文履歴一覧</h2>
   <div class= "col-12">
    <table class= "table">
     <thead>
      <tr>
       <th>注文日</th>
       <th>配送先</th>
       <th>注文商品</th>
       <th>支払金額</th>
       <th>注文詳細</th>
      </tr>
     </thead>
     <tbody>
      <% @orders.each do |order| %>
      <tr>
       <td><%= order.created_at %></td>
       <td>
        〒<%= order.postal_code %></br>
        <%= order.address %></br>
        <%= order.name %>
       </td>
       <td><%= order.item.name %></td>
       <td><%= order.billing_amount %></td>
       <td><%= link_to "表示する", public_order_path(@order), class: "btn btn-primary" %></td>
      </tr>
     <% end %>
     </tbody>
    </table>
   </div>
 </div>
</div>