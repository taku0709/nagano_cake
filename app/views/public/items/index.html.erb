<div class= "container">
 <div class= "row">
  <div class= "col-12">
   <h2>商品一覧</h2>
    <div class= "box" style="float:left; margin-right:20px;">
     <% @items.each do |item| %>
      <%= link_to public_item_path(item.id) do %>
       <%= attachment_image_tag @item, :imege, :fill,200,200, format: 'jpeg',fallback: "no_image.jpeg" %>
      <% end %>
      <p><%= item.name %></p>
      <p>¥<%= (item.price*1.1).floor %>円</p>
    </div>
  </div>
 </div>
</div>