<div class= "container">
 <div class= "row">
  <div class= "col-7">
   <%= attachment_image_tag @item, :image, :fill, 300, 300, format: 'jpeg',fallback: "no_image.jpeg" %>
  </div>
  <div class= "col-5">
   <h2><%= @item.name %></h2></br>
    <p><%= @item.introduction %></p>
    <p>¥<%= (@item.price*1.1).floor %>（税込）</p>
    <div>
     <%= form_with model:@cart_item,local:true do |f| %>
      <%= f.hidden_field :item_id, :value => @item.id %>
      <%= f.select :amount, *[1..99] %>
      <%= f.submit "カートに入れる" , class: "btn btn-primary" %>
     <% end %>
    </div>
  </div>
 </div>
</div>