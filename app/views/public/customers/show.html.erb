<div class= "container">
 <div class= "row">
  <h2>マイページ</h2>
   <div class= "col-12">
     <p><strong>登録情報</strong> <%=link_to "編集する" , edit_public_customers_path, class: "btn btn-success btn-sm" %></p>
   </div>
   <div class= "row">
     <div class= "col-12">
       <table class= "table table-bordered">
         <tr>
           <th>氏名</th>
           <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
         </tr>
         <tr>
           <th>カナ</th>
           <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
         </tr>
         <tr>
           <th>郵便番号</th>
           <td><%= @customer.postal_code %></td>
         </tr>
         <tr>
           <th>住所</th>
           <td><%= @customer.address %></td>
         </tr>
         <tr>
           <th>電話番号</th>
           <td><%= @customer.telephone_number %></td>
         </tr>
         <tr>
           <th>メールアドレス</th>
           <td><%= @customer.email %></td>
         </tr>
       </table>
       <div class="d-grid gap-2 col-12 mx-auto">
        <p><strong>配送先</strong>  <%= link_to "一覧を見る" , public_addresses_path, class: "btn btn-primary btn-sm" %></p>
       </div>
       <div class="d-grid gap-2 col-12 mx-auto">
        <p><strong>注文履歴</strong> <%= link_to "一覧を見る" ,public_orders_path, class: "btn btn-primary btn-sm" %></p>
       </div>
     </div>
   </div>
 </div>
</div>