<div class= "container">
 <div class= "row">
  <h2>会員情報編集</h2>
 </div>
 <div class= "form-horizontal">
  <%= form_for (@customer, url: public_customer_path) do |f| %>
   <div class="form-group">
    <%= f.label :last_name, "名前    (姓)" %><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
    <%= f.label :first_name, "(名)" %><%= f.text_field :first_name,autofocus: true, autocomplete: "first_name" %>
   </div></br>

   <div class="form-group">
    <%= f.label :last_name, "フリガナ    (セイ)" %><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
    <%= f.label :first_name, "(メイ)" %><%= f.text_field :first_name_kana,autofocus: true, autocomplete: "first_name_kana" %>
   </div></br>

   <div class="form-group">
    <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
   </div></br>

   <div class="form-group">
    <%= f.label :address, "住所" %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
   </div>

   <div class="form-group">
    <%= f.label :telephone_number, "電話番号(ハイフンなし)" %>
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
   </div>

   <div class="form-group">
    <%= f.label :emai, "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
   </div></br>

   <div class="actions">
    <%= f.submit "編集内容を保存", class: "btn btn-success" %>
    <%= link_to "退会する", cancel_customer_registration_path, class: "btn btn-danger" %>
   </div>
  <% end %></br>
 </div>
</div>