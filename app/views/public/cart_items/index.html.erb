<div class= "container">
 <div class= "row">
  <div class = "col-9">
   <h2>ショッピングカート</h2>
  </div>
  <div class= "col-3">
   <%= link_to "カートを空にする" , public_cart_items_destoroy_all_path(@cart_items), method: :delete, class: "btn btn-danger" %>
  </div>
  <div class= "row">
   <table class= "table">
    <thead>
     <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
     </tr>
    </thead>
    <tbody>
     <% @cart_items.each do |cart_item| %>
      <tr>
       <td>
        <%= link_to public_cart_item_path(cart_item.item.id) do %>
         <%= attachment_image_tag cart_item.item, :image, :fill, 30, 30, format: 'jpeg',fallback: "no_image.jpeg" %><%= cart_item.item.name %>
        <% end %>
       </td>
       <td><%= cart_item.item.with_tax_price %></td>
       <td>
        <%= form_with model:@cart_item,local:true do |f| %>
         <%= f.select :amount, *[1..99] %><%= f.submit "変更", class: "btn btn-primary" %>
        <% end %>
       </td>
       <td><%= cart_item.subtotal %>円</td>
       <% @total = 0 %>
       <% @total += cart_item.subtotal %>
       <td><% link_to "削除する", public_cart_item_path(cart_item), method: :delete, class: "btn btn-danger" %></td>
      </tr>
     <% end %>
    </tbody>
   </table>
   <div class= "row">
    <div class= "col-8">
     <%= link_to "買い物を続ける" , public_items_path, class: "btn btn-primary" %>
    </div>
    <div class= "row">
     <div class= "col-4">
      <table class= "table">
       <tbody>
        <th>合計金額</th>
        <td><%= @total %>円</td>
       </tbody>
      </table>
      <div class="row justify-content-center">
       <%= link_to "情報入力に進む" , new_public_order_path, class: "btn btn-primary" %>
      </div>
     </div>
    </div>
   </div>
  </div>
 </div>
</div>