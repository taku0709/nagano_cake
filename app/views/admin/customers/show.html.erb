<div class= "conteiner">
  <div class= "row">
    <div class= "col-12">
     <h2><%= @customer.last_name + @customer.first_name %>さんの会員詳細</h2>
    </div>
    <div class= "col-7">
      <p>会員ID<%= customer.id %></p>
      <p>氏名<%= customer.last_name %><%= customer.first_name %></p>
      <p>フリガナ<%= customer.last_name_kana %><%= customer.first_name_kana %></p>
      <p>郵便番号<%= customer.postral_code %></p>
      <p>住所<%= customer.address %></p>
      <p>電話番号<%= customer.telephone_number %></p>
      <p>メールアドレス<%= customer.email %></p>
      <p>会員ステータス<% if customer.is_active %>
          <a class= "text-success">有効</a>
         <% else %>
          <a class= "text-muted">退会</a>
         <% end %>
      </p>
      <%= link_to "編集" , edit_admin_customer_path(@cutomer), class: "btn btn-success" %>
      <%= link_to "注文履歴一覧を見る" , class: "btn btn-primary" %>
    </div>
  </div>
</div>