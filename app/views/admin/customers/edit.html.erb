<div class= "conteiner">
  <div class= "row">
    <div class= "col-12">
      <h2><%= customer.last_name %><%= customer.first_name %>さんの会員情報編集</h2>
      <div class= "form-horizontal">
       <%= form_for(@customer, url: admin_customer_path) do |f| %>
        <div class= "form-group">
          <%= f.label :会員ID %>
          <%= f.label @customer.id %>
        </div>
        
        <div class= "form-group">
         <%= f.label :氏名 %>
         <%= f.text_field :last_name %>
         <%= f.text_field :first_name %>
        </div>
        
        <div class= "form-group">
          <%= f.label :フリガナ %>
          <%= f.text_field :last_name_kana %>
          <%= f.text_field :first_name_kana %>
        </div>
        
        <div class= "form-group">
          <%= f.label :郵便番号 %>
          <%= f.text_field :postral_code %>
        </div>
        
         <div class= "form-group">
           <%= f.label :住所 %>
           <%= f.text_field :address %>
         </div>
         
         <div class= "form-group">
           <%= f.label :電話番号 %>
           <%= f.text_field :telephone_number %>
         </div>
         
         <div class= "form-group">
           <%= f.label :メールアドレス %>
           <%= f.text_field :email %>
         </div>
         
         <div class= "form-group">
           <%= f.label :会員ステータス %>
           <%= f.radio_button :is_active, true %>
           <%= f.label :is_active, "有効" %>
           <%= f.radio_button :is_active, false %>
           <%= f.label :is_active, "退会" %>
         </div>
         
         <%= f.submit "変更を保存" , class: "btn btn-primary" %>
        
      </div>
    </div>
  </div>
</div>