<div class= "container">
 <div class= "row">
  <div class= "col-12">
   <h2>商品編集</h2>
  </div>
    <div class= "form-horizontal">
     <%= form_for(@item, url: admin_item_path) do |f| %>
      <div class= "form-group">
       <%= f.label :image, "商品画像" %>
       <%= f.attachment_field :image %>
      </div>
      <div class= "form-group">
        <%= f.label :name, "商品名" %>
        <%= f.text_field :name %>
      </div>
      <div class= "form-group">
        <%= f.label :introduction, "商品説明" %>
        <%= f.text_area :introduction %>
      </div>
      <div class= "form-group">
        <%= f.label :genre_id, "ジャンル" %>
        <%= f.collection_select(:genre_id, Genre.all, :id, :name, include_blank: "選択してください")%>
      </div>
      <div class= "form-group">
        <%= f.label :price, "税別価格" %>
        <%= f.text_field :price %>円
      </div>
      <div class= "form-group">
        <%= f.radio_button :is_active, true %>
        <%= f.label :is_active, "販売中" %>
        <%= f.radio_button :is_active, false %>
        <%= f.label :is_active, "販売停止中" %>
      </div>
      <%= f.submit "変更を保存", class:"btn btn-primary" %>
     <% end %>
    </div>
 </div>
</div>