<div class= "container">
  <div class= "row">
   <div class= "col-12">
    <h2>ジャンル一覧・追加</h2>
    <div class= "form-horizontal">
      <%= form_for(@genre, url: admin_genres_path) do |f| %>
       <div class= "form-group">
        <div class= "col-md-6 col-md-offset-3">
         <%= f.label :name,"ジャンル名" %>
         <%= f.text_field :name, autofocus: true %>
         <%= f.submit "新規登録", class: "btn btn-primary" %>
        </div>
       </div>
      <% end %>
    </div>
    <div class= "row">
      <div class= "col-md-6 col-md-offset-3">
        <table class= "table">
         <thead>
          <tr>
            <th>ジャンル</th>
          </tr>
         </thead>

         <tbody>
          <% @genres.each do |genre| %>
           <tr>
             <td><%= genre.name %></td>
             <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-primary"  %></td>
           </tr>
          <% end %>
         </tbody>
        </table>
      </div>
    </div>
   </div>
  </div>
</div>