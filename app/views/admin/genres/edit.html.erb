<div class= "container">
 <div class= "row">
   <div class= "col-12">
     <h2>ジャンル編集</h2>
     <div class= "form-horizontal">
       <%= form_for(@genre, url: admin_genre_path(@genre.id)) do |f| %>
        <div class= "form-group">
          <%= f.label :name, "ジャンル名" %>
          <%= f.text_field :name, autfocus: true %>
          <%= f.submit "変更を保存する", class: "btn btn-primary" %>
        </div>
       <% end %>
     </div>
   </div>
 </div>
</div>