<div class= "container">
 <div class ="row">
  <div class= "col-8 col-md-offset-2">
   <h2>新規会員登録</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
     <%= render "customers/shared/error_messages", resource: resource %>

     <div class="field">
      <%= f.label :last_name, "名前    (姓)" %><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
      <%= f.label :first_name, "(名)" %><%= f.text_field :first_name,autofocus: true, autocomplete: "first_name" %>
     </div></br>

      <div class="field">
      <%= f.label :last_name, "フリガナ    (セイ)" %><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
      <%= f.label :first_name, "(メイ)" %><%= f.text_field :first_name_kana,autofocus: true, autocomplete: "first_name_kana" %>
     </div></br>

     <div class="field">
      <%= f.label :emai, "メールアドレス" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
     </div></br>

     <div class="field">
      <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
      <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
     </div></br>

     <div class="field">
      <%= f.label :address, "住所" %>
      <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
     </div>

     <div class="field">
      <%= f.label :telephone_number, "電話番号(ハイフンなし)" %>
      <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
     </div>

     <div class="field">
      <%= f.label :password , "パスワード(6文字以上)" %>
      <% if @minimum_password_length %>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password" %>
     </div>

     <div class="field">
      <%= f.label :password_confirmation , "パスワード(確認用)"%>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
     </div></br>

     <div class="actions">
      <%= f.submit "新規登録", class: "btn btn-success" %>
     </div>
    <% end %></br>

    <h4>既に登録済の方</h4>
    <p><%= link_to "こちら", new_customer_session_path %>からログインしてください。</p>

  </div>
 </div>
</div>
